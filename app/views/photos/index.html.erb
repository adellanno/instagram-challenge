<% if @photos.any? %>
  <% @photos.each do |photo| %>
    <p>Title:<%= link_to photo.title, photo_path(photo) %></p>
    <p>Descripton:<%= photo.description %></p>
    <p class = 'image'><%= image_tag photo.image.url(:medium) %></p>
    <p><%= pluralize photo.likes.count, 'like' %></p>
    <p><%= link_to 'Like',  photo_likes_path(photo), method: :post %></p>

  <% if photo.comments.any? %>
    <% photo.comments.each do |comment| %>
      <li>
        <%= comment.comments %>
      </li>
      <% if user_signed_in?  && comment.user_id == current_user.id %>
        <%= link_to "Delete Comment", comment_path(comment), method: :delete %>
      <% end %>
      <% end %>
  <% else %>
    <p> No comments yet </p>
  <% end %>

  <% if current_user %>
    <%= link_to "Comment on this photo", new_photo_comment_path(photo) %>
    <br>
    <% if current_user.id == photo.user_id %>
      <%= link_to "Delete this photo", photo_path(photo), method: :delete %>
    <% end %>
  <% end %>
  <br>

  <% end %>
<% else %>
  No photos yet
<% end %>

<br>
<%= link_to "Add a photo", new_photo_path %>
